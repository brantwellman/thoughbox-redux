<h1>Submit your happy link here</h1>

<%= form_for(@link) do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.submit "Submit" %>
<% end %>

<% if @links %>
  <h1>All of the Links</h1>
<% end %>

<% @links.each do |link| %>
  <%= link_to link.title, "#{link.url}" %> -
  <% if link.read %>
    <%= link_to "Mark as Unread", link_path(link, link: {read: false}), :method => :patch, class: :read %>
  <% else %>
    <%= link_to "Mark as Read", link_path(link, link: {read: true}), :method => :patch, class: :unread %>
  <% end %>
  <%= button_to 'Edit', edit_link_path(link), method: :get %>
  <br/>
<% end %>
