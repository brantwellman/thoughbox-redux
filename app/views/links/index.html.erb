<h1>Submit your happy link here</h1>

<%= form_for(@link) do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.submit "Submit" %>
<% end %>

<h1>All of the Links</h1>

<% @links.each do |link| %>
  <%= link_to link.title, "#{link.url}"  %>
<% end %>
